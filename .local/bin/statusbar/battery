#!/bin/sh
# Give a battery name (e.g. BAT0) as an argument.

case $BLOCK_BUTTON in
    3) pgrep -x dunst >/dev/null && notify-send "ğŸ”‹ Battery module" "ğŸ”‹: discharging
ğŸ›‘: not charging
â™»: stagnant charge
ïƒ§: charging
âš¡: charged
ï„ª: battery very low!
- Text color reflects charge left" ;;
esac

for battery in /sys/class/power_supply/BAT?
do
capacity=$(cat "$battery"/capacity) || exit
status=$(cat "$battery"/status)
wm=$(wmctrl -m |grep Name| awk '{print $2}')
if [ "$wm" = "i3" ]; then
	str="<span color='%s'>%s%s</span>\n"
	if [ "$capacity" -ge 75 ]; then
		color="#7ca075"
	elif [ "$capacity" -ge 30 ]; then
		color="#a5accd"
	elif [ "$capacity" -ge 15 ]; then
		color="#a0757c"
	else
		color="#ff0000"
	fi
else
	str="%s%s%s\n"
	if [ "$capacity" -ge 75 ]; then
		color=""
	elif [ "$capacity" -ge 30 ]; then
		color=""
	elif [ "$capacity" -ge 15 ]; then
		color="	"
	else
		color=""
	fi
fi


if [ "$capacity" -ge 75 ]; then
	batsymb="ï‰€"
elif [ "$capacity" -ge 50 ]; then
	batsymb="ï‰"
elif [ "$capacity" -ge 25 ]; then
	batsymb="ï‰‚"
elif [ "$capacity" -ge 6 ]; then
	batsymb="ï‰ƒ"
else
	batsymb="ï‰„"
fi

#[ "$status" = "Charging" ] && color=""
[ "$status" = "Charging" ] && color="#7ca075"

printf "$str" "$color" "$(echo "$status" | sed -e "s/,//;s/Discharging/$batsymb/;s/Not charging/ï /;s/Charging/ïƒ§ /;s/Unknown/â™»ï¸/;s/Full/ï‰€/;s/ 0*/ /g;s/ :/ /g")" "$(echo "$capacity" | sed -e 's/$/%/')"
done


