#!/bin/sh
# Give a battery name (e.g. BAT0) as an argument.

case $BLOCK_BUTTON in
    3) pgrep -x dunst >/dev/null && notify-send "ğŸ”‹ Battery module" "ğŸ”‹: discharging
ğŸ›‘: not charging
â™»: stagnant charge
ï—§: charging
âš¡: charged
ï„ª: battery very low!
- Text color reflects charge left" ;;
esac

capacity=$(cat /sys/class/power_supply/"$1"/capacity) || exit
status=$(cat /sys/class/power_supply/"$1"/status)
if [ "$capacity" -ge 75 ]; then
	color="#7ca075"
	batsymb="ï‰€"
elif [ "$capacity" -ge 50 ]; then
	color="#a5abcc"
	batsymb="ï‰"
elif [ "$capacity" -ge 25 ]; then
	color="#a0757c"
	batsymb="ï‰‚"
else
	color="#ff0000"
	batsymb="ï‰ƒ"
fi


[ "$status" = "Charging" ] && color="#7ca075"

printf "<span color='%s'>%s%s</span>\n" "$color" "$(echo "$status" | sed -e "s/,//;s/Discharging/$batsymb/;s/Not Charging/ğŸ›‘/;s/Charging/ï—§/;s/Unknown/â™»ï¸/;s/Full/ï‰€/;s/ 0*/ /g;s/ :/ /g")" "$(echo "$capacity" | sed -e 's/$/%/')"
