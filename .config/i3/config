client.focused          #81A1C1 #81A1C1 #ffffff #2e9ef4   #81A1C1
client.focused_inactive #3b4252 #5f676a #ffffff #484e50   #5f676a
client.unfocused        #3b4252 #434C5E #888888 #292d2e   #434C5E
