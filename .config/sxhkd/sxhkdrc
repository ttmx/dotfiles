# Basic binds
super + Return
	$TERMINAL
super + shift + Return
	samedir
super + d
	dmenu_run
super + r
	ddspawn $FILE
super + e
	$TERMINAL -e neomutt
super + m
	$TERMINAL -e ncmpcpp
super + n
	$TERMINAL -e newsboat
super + i
	$TERMINAL -e htop
super + y
	$TERMINAL -e calcurse
super + shift + a
	$TERMINAL -e pulsemixer; pkill -RTMIN+10 i3blocks
super + shift + c
	camtoggle
super + shift + m
	python ~/Uni/.scripts/openlink.py
super + shift + e
	tutorialvids
super + shift + w
	$BROWSER
super + shift + g
	gimp
super + p
	ddgui keepassxc

# Et cetera...
super + period
	rofimoji --copy-only
super + Scroll_Lock
	killall screenkey || screenkey
super + Pause
	showclip
super + shift + x
	prompt "Shutdown computer?" "sudo -A shutdown -h now"
super + shift + BackSpace
	sysact
super + shift + Escape
	prompt 'Leave Xorg?' 'sudo killall Xorg'
super + x
	mpc pause; pauseallmpv; i3lock -e -f -c 1b1e2b; xset dpms force off
XF86Launch1
	xset dpms force off
XF86AudioMute
	lmc mute
XF86Audio{Raise,Lower}Volume
	lmc {u,d} 5
XF86MonBrightnessDown
	xbacklight -dec 10 & $(progbar $(($(xbacklight -get |cut -f1 -d".") - 10)))
XF86MonBrightnessUp
	xbacklight -inc 10 & $(progbar $(($(xbacklight -get |cut -f1 -d".") + 10)))

# Recording
# Take screenshot
@Print
	freezemaim
# Pick screenshot type
shift + Print
	maimpick
# Record audio or video
super + Print
	dmenurecord
# kill active recording
super + Delete
	dmenurecord kill

# Next song
{XF86AudioNext,super + guillemotleft}
	playerctl next -i chromium
# Previous song
{XF86AudioPrev,super + apostrophe}
	playerctl previous -i chromium
# Play/pause song
{XF86AudioStop, super + plus}
	playerctl play-pause -i chromium
XF86AudioPause
	playerctl pause -i chromium
XF86AudioPlay
	playerctl play -i chromium

# Function keys
# Show readme
super + F1
	groff -mom $HOME/.local/share/larbs/readme.mom -Tpdf | zathura -
# F2 is restart in i3 right now.
# Change display
super + F3
	displayselect
# Hibernate
super + F4
	prompt 'Hibernate computer?' 'sudo systemctl suspend'
# Restart/rescan wifi/eth networks
super + F5
	sudo -A systemctl restart NetworkManager
# Start torrent daemon/open interface
super + F6
	torwrap
# toggle torrent daemon
super + F7
	td-toggle
# sync email
super + F8
	mailsync
# Mount a USB drive or Android device
super + F9
	dmenumount
# Unmount a USB drive or Android device
super + F10
	dmenuumount
# Search with Duckduckgo
super + F11
	ducksearch
# Network Manager interface
super + F12
	$TERMINAL -e sudo -A nmtui


